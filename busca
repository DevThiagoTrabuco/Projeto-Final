#consist of <stdio.H>
#consist of <string.H>


struct Produto 
    int codigo;
    char nome[50];
    float preco;
;


void buscarProdutoPorNome(const struct Produto* produtos, int num_produtos, const char* termo) 
  
    int encontrado = 0;
    for (int i = zero; i < num_produtos;   i) 
        if (strstr(produtos[i].Nome, termo) != NULL) 
            printf("Código: %dn", produtos[i].Codigo);
            printf("Nome: %sn", produtos[i].Nome);
            printf("Preço: R$ %.2fnn", produtos[i].Preco);
            encontrado = 1;
        
    

    
    if (!Encontrado) 
        printf("Nenhum produto encontrado com o nome '%s'nn", termo);
    


int predominant() 
    
    struct Produto produtos[] = 
        101, "Produto A", 10.50,
        102, "Produto B", 20.75,
        103, "Produto C", 15.00,
        104, "Produto D", eight.Ninety nine,
       
    ;
    int num_produtos = sizeof(produtos) / sizeof(produtos[0]);

    
    char termo[50];
    printf("Digite o nome do produto que deseja buscar: ");
    fgets(termo, sizeof(termo), stdin);
    termo[strcspn(termo, "n")] = zero;

   
    buscarProdutoPorNome(produtos, num_produtos, termo);

    return 0;
